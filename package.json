{
  "name": "svelvet",
  "description": "A cli svelte compiler that works with snowpack",
  "version": "0.4.0",
  "author": "Jake Deichert",
  "repository": "github:jakedeichert/svelvet",
  "license": "MIT",
  "bin": "./bin/index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "clean": "rm -rf lib",
    "dev": "npm run build -- -w",
    "build": "npm run clean && tsc",
    "test": "./scripts/test.sh",
    "format": "prettier . --write",
    "format:check": "prettier . --list-different",
    "lint": "eslint . --ext ts --ignore-path .gitignore --ignore-pattern tests"
  },
  "dependencies": {
    "chokidar": "^3.3.1",
    "es-module-lexer": "^0.3.17",
    "glob": "^7.1.6",
    "lodash.throttle": "^4.1.1",
    "p-limit": "^2.2.2",
    "rimraf": "^3.0.2",
    "servor": "^3.1.0",
    "snowpack": "1.5.1",
    "terser": "^4.6.3"
  },
  "devDependencies": {
    "@jakedeichert/eslint-config": "^4.0.5",
    "@types/babel__core": "^7.1.3",
    "@types/es-module-lexer": "^0.3.0",
    "@types/glob": "^7.1.1",
    "@types/lodash.throttle": "^4.1.6",
    "@types/node": "^13.1.8",
    "@types/rimraf": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "prettier": "^2.0.1",
    "svelte": "^3.7.1",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "svelte": "^3.7.1"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
