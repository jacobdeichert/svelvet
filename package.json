{
  "name": "svelvet",
  "description": "A cli svelte compiler that works with snowpack",
  "version": "0.1.8",
  "author": "Jake Deichert",
  "repository": "github:jakedeichert/svelvet",
  "license": "MIT",
  "bin": "./bin/index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "clean": "rm -rf lib",
    "dev": "npm run build -- -w",
    "build": "npm run clean && tsc",
    "test": "./scripts/test.sh",
    "format": "prettier '**/*.{js,jsx,ts,tsx,css,html,json,yml}' --write --ignore-path .gitignore",
    "format:check": "prettier '**/*.{js,jsx,ts,tsx,css,html,json,yml}' --list-different --ignore-path .gitignore",
    "lint": "eslint . --ext ts --ignore-pattern dist --ignore-pattern node_modules"
  },
  "dependencies": {
    "chokidar": "^3.3.1",
    "glob": "^7.1.6",
    "p-limit": "^2.2.2",
    "snowpack": "^1.0.5"
  },
  "devDependencies": {
    "@jakedeichert/eslint-config": "^4.0.5",
    "@types/babel__core": "^7.1.3",
    "@types/glob": "^7.1.1",
    "@types/node": "^13.1.8",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "prettier": "^1.16.1",
    "svelte": "^3.7.1",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "svelte": "^3.7.1"
  }
}
